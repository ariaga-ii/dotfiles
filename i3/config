  status_command ~/.local/bin/mystatus.sh
  # tray_padding         3
  # font pango:Ubuntu 9

	colors {
		# whole color settings
		background   $background
		statusline   $foreground
		separator    $cursorColor2

		# type             border      backgr.        font
		focused_workspace  $coral    $coral       $background

		active_workspace   $cursorColor2 $cursorColor2  $foreground 
		inactive_workspace $cursorColor2 $cursorColor2    $foreground 
		urgent_workspace   $valencia   $valencia      $foreground   
	}
	# i3bar position
        
  position top
  # output primary
  tray_output none
}


